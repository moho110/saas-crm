<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vrmlstudio.mytable.mapper.CmfCalendarTypeMapper">
    
    <resultMap type="CmfCalendarType" id="CmfCalendarTypeResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
    </resultMap>

    <sql id="selectCmfCalendarTypeVo">
        select id, name from cmf_calendar_type
    </sql>

    <select id="selectCmfCalendarTypeList" parameterType="CmfCalendarType" resultMap="CmfCalendarTypeResult">
        <include refid="selectCmfCalendarTypeVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectCmfCalendarTypeById" parameterType="Integer" resultMap="CmfCalendarTypeResult">
        <include refid="selectCmfCalendarTypeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCmfCalendarType" parameterType="CmfCalendarType" useGeneratedKeys="true" keyProperty="id">
        insert into cmf_calendar_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
         </trim>
    </insert>

    <update id="updateCmfCalendarType" parameterType="CmfCalendarType">
        update cmf_calendar_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCmfCalendarTypeById" parameterType="Integer">
        delete from cmf_calendar_type where id = #{id}
    </delete>

    <delete id="deleteCmfCalendarTypeByIds" parameterType="String">
        delete from cmf_calendar_type where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>