            <if test="path != null and path != ''">path,</if>
            <if test="url != null and url != ''">url,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="more != null and more != ''">more,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
